<h2>Step 2: Additional Details</h2>

<%= simple_form_for(@user, as: :user, url: registration_path(:user)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :birthday, required: true %>
    <%= f.input :postal, required: true %>
    <%= f.input :area, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Next", name: 'user[step]', value: '2' %>
  </div>
<% end %>
