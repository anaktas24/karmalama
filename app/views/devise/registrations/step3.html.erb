<%= form_with model: @user, url: user_registration_path(format: :html), method: :post, local: true do |f| %>
  <%= f.hidden_field :step, value: @step %>
  <!-- Rest of the form fields -->
  <%= f.submit "Complete Registration" %>
<% end %>
<!-- Link to step 2 -->
<%= link_to "Previous", new_user_registration_path(user: { step: 2 }) %>
